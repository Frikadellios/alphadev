---
import { Image } from 'astro:assets'

// Props type
type Props = {
  image: ImageMetadata
  alt: string
}
// Translation Imports? create locales

// Astro Props!
const { image, alt } = Astro.props
---
<div class="wrap">
  <div class="circle">
    <Image
      src={image} class="h-16 w-16" alt={`Logo ${alt}`}
    />
  </div>
</div>

<style>
  .wrap {
    display: auto;
    align-items: auto;
    justify-content: auto;
    margin: auto;
    height: auto;
  }

  .circle {
    background: white;
    width: auto;
    height: auto;
    border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
    overflow: hidden;
    animation: morph 3s linear infinite;
  }

  .circle img {
    width: 100%;
  }

  @keyframes morph {
    0%,
    100% {
      border-radius: 40% 60% 70% 30% / 40% 40% 60% 50%;
    }
    34% {
      border-radius: 70% 30% 50% 50% / 30% 30% 70% 70%;
    }
    67% {
      border-radius: 100% 60% 60% 100% / 100% 100% 60% 60%;
    }
  }
</style>
